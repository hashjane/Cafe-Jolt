<!DOCTYPE html>
<html>
  <head>
    <title>Cafe Jolt</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="main-container" class="container">
      <div class="row">
        <div class="col-xs-3">
          <h1>Cafe Jolt</h1>
          <% if @tray %>
            <div id="tray">
              <%= render @tray %>
            </div>
          <% end %>
        </div>
        <div class="col-xs-9">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
